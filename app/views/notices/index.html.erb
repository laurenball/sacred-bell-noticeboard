<p id="notice"><%= notice %></p>

<h1>Notices</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Sessions</th>
      <th>Openings</th>
      <th>Author</th>
      <th>Notes</th>
      <th>Reward</th>
      <th>Requester</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notices.each do |notice| %>
      <tr>
        <td><%= notice.title %></td>
        <td><%= notice.sessions %></td>
        <td><%= notice.openings %></td>
        <td><%= notice.author %></td>
        <td><%= notice.notes %></td>
        <td><%= notice.reward %></td>
        <td><%= notice.requester %></td>
        <td><%= link_to 'Show', notice %></td>
        <td><%= link_to 'Edit', edit_notice_path(notice) %></td>
        <td><%= link_to 'Destroy', notice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

